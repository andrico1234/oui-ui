{
    "compilerOptions": {
        "target": "es2019",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": ["es2019", "dom"],
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "paths": {
            "@oui-ui/checkbox": ["packages/checkbox/src"]
        }
    },
    "exclude": ["node_modules", "packages/**/tests", "./packages/**/lib/**/*"]
}
