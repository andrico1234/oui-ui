{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "cd ./docs && yarn build",
        "bundle": "tsc -b ./tsconfig.packages.json && cd ./scripts && node ./bundleUmd.js && cd ../",
        "custom-elements-manifest": "echo 'This will build the custom elements manifest' && exit 1",
        "debug": "web-test-runner --watch packages/**/*.test.js --node-resolve",
        "develop": "tsc -b ./tsconfig.packages.json --watch",
        "lint": "run-p lint:*",
        "lint:eslint": "yarn eslint --fix .",
        "lint:prettier": "npx prettier --write packages/**",
        "react:storybook": "yarn workspace @openui/react storybook",
        "react:start": "yarn workspace @openui/react start",
        "react:example": "yarn workspace @openui/react start:example",
        "publish": "yarn bundle && np",
        "serve": "yarn build && cd ./docs && yarn serve",
        "start": "cd ./docs && yarn start",
        "test": "web-test-runner packages/**/*.test.js --node-resolve",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@open-wc/testing": "^2.5.33",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "@web/test-runner": "^0.13.5",
        "glob": "^7.1.7",
        "eslint": "~7.25.0",
        "eslint-plugin-jsx-a11y": "6.4.1",
        "eslint-plugin-react": "^7.23.2",
        "eslint-plugin-react-hooks": "^4.2.0",
        "npm-run-all": "^4.1.5",
        "prettier": "2.3.0",
        "vite": "^2.3.4"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
        "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
    }
}
